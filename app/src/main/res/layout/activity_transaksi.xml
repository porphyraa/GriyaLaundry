<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="GRIYA LAUNDRY"
        android:textColor="#469FD1"
        android:textSize="16pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="TAMBAH TRANSAKSI"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="26dp"
        android:text="NAMA"
        android:textSize="7pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/namaTextBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:textSize="7pt" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTambah"
        android:layout_width="292dp"
        android:layout_height="312dp"
        android:layout_below="@+id/subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTambah"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="24dp"
        android:text="TOTAL"
        android:textSize="7pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTotalHarga"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSimpan"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:text="IDR 0"
        android:textSize="7pt" />

    <Button
        android:id="@+id/btnTambah"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_above="@+id/bgTransaksi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="-18dp"
        android:background="@drawable/ic_button"
        android:text="tambah"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_above="@+id/bgTransaksi"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="-18dp"
        android:background="@drawable/ic_button"
        android:text="simpan"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bgTransaksi"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-48dp"
        android:src="@drawable/ic_bg_button" />

    <Button
        android:id="@+id/btnTransaksi_transaksi"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_button_clicked"
        android:text="TRANSAKSI"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnList_transaksi"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_button_unclicked"
        android:text="LIST"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        android:textStyle="bold" />
</RelativeLayout>